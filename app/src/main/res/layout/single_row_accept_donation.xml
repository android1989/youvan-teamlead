<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_row_accept_donation_image"
        android:src="@drawable/default_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/single_row_accept_donation_name"
        android:text="Donor Name"
        android:layout_toEndOf="@+id/single_row_accept_donation_image"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="19sp"
        android:textColor="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/single_row_accept_donation_text"
        android:text="Class:"
        android:layout_toRightOf="@+id/single_row_accept_donation_image"
        android:layout_below="@+id/single_row_accept_donation_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="17sp"
        android:textColor="@color/main_color"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/single_row_accept_donation_standard"
        android:text="3"
        android:layout_toRightOf="@+id/single_row_accept_donation_text"
        android:layout_below="@+id/single_row_accept_donation_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:textSize="17sp"
        android:textColor="@color/main_color"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/accept_donation_call_icon"
        android:src="@drawable/phone_call1"
        android:layout_toLeftOf="@+id/accept_mobile"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/accept_mobile"
        android:text="Call"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/link_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/accept_item_quantity"
        android:text="2"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/single_row_accept_donation_standard"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/accept_item_quantity_text"
        android:text="Item Qty:"
        android:layout_alignBaseline="@+id/single_row_accept_donation_standard"
        android:layout_toStartOf="@+id/accept_item_quantity"
        android:layout_marginEnd="5dp"
        android:textColor="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3D3D3"
        android:layout_below="@+id/single_row_accept_donation_image"/>

</RelativeLayout>
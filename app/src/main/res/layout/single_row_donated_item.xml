<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_row_donated_item_image"
        android:src="@drawable/default_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/single_row_donated_item_name"
        android:text="Item Name"
        android:layout_toEndOf="@+id/single_row_donated_item_image"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="19sp"
        android:textColor="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/single_row_donated_item_quantity_text"
        android:text="Qty:"
        android:layout_toEndOf="@+id/single_row_donated_item_image"
        android:layout_below="@+id/single_row_donated_item_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="17sp"
        android:textColor="@color/main_color"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/single_row_donated_item_quantity"
        android:text="2"
        android:layout_toEndOf="@+id/single_row_donated_item_quantity_text"
        android:layout_below="@+id/single_row_donated_item_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:textSize="17sp"
        android:textColor="@color/main_color"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/single_row_donated_item_reject_btn"
        android:text="Reject"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/single_row_donated_item_quantity"
        android:layout_marginEnd="10dp"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@drawable/circular_button_red"/>

    <Button
        android:id="@+id/single_row_donated_item_accept_btn"
        android:text="Accept"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_toStartOf="@+id/single_row_donated_item_reject_btn"
        android:layout_alignBaseline="@+id/single_row_donated_item_quantity"
        android:layout_marginEnd="5dp"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@drawable/circular_button"/>

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3D3D3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/single_row_donated_item_image"/>

</RelativeLayout>
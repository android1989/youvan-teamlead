<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_row_all_donor_image"
        android:src="@drawable/default_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/single_row_all_donor_name"
        android:text="Donor Name"
        android:layout_toEndOf="@+id/single_row_all_donor_image"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="19sp"
        android:textColor="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/single_row_all_donor_standard_text"
        android:text="Class:"
        android:layout_toRightOf="@+id/single_row_all_donor_image"
        android:layout_below="@+id/single_row_all_donor_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="17sp"
        android:textColor="@color/main_color"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/single_row_item_quantity"
        android:text="3"
        android:layout_toRightOf="@+id/single_row_all_donor_standard_text"
        android:layout_below="@+id/single_row_all_donor_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:textSize="17sp"
        android:textColor="@color/main_color"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3D3D3"
        android:layout_below="@+id/single_row_all_donor_image"/>

</RelativeLayout>